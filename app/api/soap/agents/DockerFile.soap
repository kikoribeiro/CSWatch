# services/soap-service/Dockerfile
FROM node:22-alpine

WORKDIR /app

# Instalar pnpm globalmente
RUN npm install -g pnpm

# Copiar arquivos de dependência
COPY package.json pnpm-lock.yaml* ./

# Instalar dependências incluindo libxmljs2
RUN apk add --no-cache python3 make g++ && \
    pnpm install --frozen-lockfile

# Copiar código fonte
COPY . .

# Expor porta
EXPOSE 3002

# Iniciar serviço
CMD ["pnpm", "start"]